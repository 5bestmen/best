<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.corsair.entity.WorkContent"  catalog="DMS" dynamic-insert="true" dynamic-update="true">
        <id name="id">
        <generator class="uuid"/>
    </id>
        <property name="taskName" type="java.lang.String"/>
        <property name="taskContent" type="java.lang.String"/>
        <many-to-one name="workTicket" class="com.corsair.entity.WorkTicket" fetch="join"/>
    </class>
</hibernate-mapping>